{
    "Poetry": {
      "Project Management": {
        "Create New Project": "poetry new <project-name>",
        "Create Project with Specific Layout": "poetry new <project-name> --src",
        "Show Project Info": "poetry show --tree"
      },
      "Dependency Management": {
        "Add Dependency": "poetry add <package>",
        "Add Development Dependency": "poetry add <package> --dev",
        "Remove Dependency": "poetry remove <package>",
        "Update Dependencies": "poetry update",
        "Show Dependencies": "poetry show",
        "Show Dependency Tree": "poetry show --tree"
      },
      "Lock File Management": {
        "Generate Lock File": "poetry lock",
        "Check Lock File for Updates": "poetry lock --check",
        "Update Lock File": "poetry lock --no-update"
      },
      "Virtual Environment": {
        "Create Virtual Environment": "poetry env use python",
        "Activate Virtual Environment": "poetry shell",
        "Run Command in Virtual Environment": "poetry run <command>",
        "Show Virtual Environment Path": "poetry env info --path"
      },
      "Publishing": {
        "Publish Package": "poetry publish --build",
        "Publish to Test PyPI": "poetry publish --build --repository testpypi",
        "Configure Publishing": "poetry config repositories.<repo-name> <url> && poetry config pypi-token.<repo-name> <token>",
        "Show Publishing Configuration": "poetry config --list"
      },
      "Configuration": {
        "View Configuration": "poetry config --list",
        "Set Configuration": "poetry config <key> <value>",
        "Remove Configuration": "poetry config --unset <key>"
      },
      "Versioning": {
        "Show Version": "poetry version",
        "Set Version": "poetry version <new-version>",
        "Bump Version": "poetry version <major|minor|patch>"
      },
      "Building and Packaging": {
        "Build Package": "poetry build",
        "Show Build Info": "poetry build --verbose"
      }
    }
  }